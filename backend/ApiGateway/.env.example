# Environment Variables for Local Development
# Copy this file to .env and modify as needed

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# JWT Configuration
JWT_SECRET=mySecretKeyForJWTTokenGenerationAndValidationThatIsAtLeast512BitsLongToMeetHS512AlgorithmRequirementsForSecureTokenSigning

# Local Service URLs
USER_SERVICE_URL=http://localhost:8080
PRODUCT_SERVICE_URL=http://localhost:8083
ORDER_SERVICE_URL=http://localhost:8084
SUPPLIER_SERVICE_URL=http://localhost:8082
INVENTORY_SERVICE_URL=http://localhost:8085
RESOURCE_SERVICE_URL=http://localhost:8086
HEALTH_SERVICE_URL=http://localhost:8090

# Database URLs (if needed for other services)
DATABASE_URL=jdbc:mysql://localhost:3306/inventory_db
DATABASE_USERNAME=root
DATABASE_PASSWORD=password

# API Keys (if needed)
API_KEY=your-api-key-here

